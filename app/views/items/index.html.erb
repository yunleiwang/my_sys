<p id="notice"><%= notice %></p>

<h1>Listing Items</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th>Units</th>
      <th>Header</th>
      <th>Left item text</th>
      <th>Right item text</th>
      <th>Phi status</th>
      <th>Item data type</th>
      <th>Response type</th>
      <th>Options text</th>
      <th>Options value</th>
      <th>Defeault value</th>
      <th>Regexp</th>
      <th>Regexp error msg</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @items.each do |item| %>
      <tr>
        <td><%= item.name %></td>
        <td><%= item.description %></td>
        <td><%= item.units %></td>
        <td><%= item.header %></td>
        <td><%= item.left_item_text %></td>
        <td><%= item.right_item_text %></td>
        <td><%= item.phi_status %></td>
        <td><%= item.item_data_type %></td>
        <td><%= item.response_type %></td>
        <td><%= item.options_text %></td>
        <td><%= item.options_value %></td>
        <td><%= item.defeault_value %></td>
        <td><%= item.regexp %></td>
        <td><%= item.regexp_error_msg %></td>
        <td><%= link_to 'Show', item %></td>
        <td><%= link_to 'Edit', edit_item_path(item) %></td>
        <td><%= link_to 'Destroy', item, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

