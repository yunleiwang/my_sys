      window.jQuery || document.write("<script src='/assets/jquery-2.0.3.min.js'>"+"<"+"script>");
  </script>
  <!-- <![endif]-->

  <!--[if IE]>
  <script type="text/javascript">
      window.jQuery || document.write("<script src='/assets/jquery-1.10.2.min.js'>"+"<"+"script>");
  </script>
  <![endif]-->
  <![endif]-->
  <%= csrf_meta_tags %>
</head>
<body>

<%= render 'layouts/navbar' %>

<div class="main-container" id="main-container">
  <script type="text/javascript">
      try{ace.settings.check('main-container' , 'fixed')}catch(e){}
  </script>

  <div class="main-container-inner">
    <a class="menu-toggler" id="menu-toggler" href="#">
      <span class="menu-text"></span>
    </a>

    <div class="sidebar" id="sidebar">
      <script type="text/javascript">
          try{ace.settings.check('sidebar' , 'fixed')}catch(e){}
      </script>

      <%= render 'layouts/sidebar' %>

      <ul class="nav nav-list">
        <li class="active">
          <a href="/patient_visits/<%= params[:patient_visit_id] %>">
            <i class="icon-dashboard"></i>
            <span class="menu-text"> 就诊信息 </span>
          </a>
        </li>
        <% menus= Menu.where('menu_type=?',params[:menu_type].to_i).order('id asc') %>
        <% first_level_menus = menus.select{|menu|menu.menu_id==0} %>
        <% first_level_menus.each_with_index do |first_level_menu,index| %>
            <% index=index+1 %>
            <% crf_infos = first_level_menu.crf_infos %>
            <li class="<%= nav_li_class(index,params[:menu_id]) %>">
              <a href="<%= first_level_menu.link %>" class="<%= nav_a_class(first_level_menu) %>">
                <i class="<%= first_level_menu.icon_class %>"></i>
                <span class="menu-text"> <%= first_level_menu.name_cn %></span>
              </a>
              <!--二级菜单判断-->
              <% second_level_menus= first_level_menu.submenus %>
              <% if ((!second_level_menus.empty?) || (crf_infos.length>0))%>
                  <ul class="submenu">
                    <!--菜单上所挂表单开始-->
                    <% crf_infos.each do |crf_info| %>
                        <li>
                          <a href="/item_form_metaelements/new?crf_info_id=<%= crf_info.id %>&&menu_type=<%= params[:menu_type] %>" class="pjax-link">
                            <i class="icon-double-angle-right"></i>
                            <%= crf_info.name %>
                          </a>
                        </li>
                    <% end %>
                    <!--菜单上所挂的表单结束-->
                    <% second_level_menus.each do |second_level_menu| %>
                        <li>
                          <a href="<%= second_level_menu.link %>" class="pjax-link">
                            <i class="icon-double-angle-right"></i>
                            <%= second_level_menu.name_cn %>
                            <% third_level_menus= second_level_menu.submenus %>
                            <% if !third_level_menus.empty? %>
                                <b class="arrow icon-angle-down"></b>
                            <% end %>
                          </a>
                          <!-- 三级菜单判断 -->
                          <% if !third_level_menus.empty? %>
                              <ul class="submenu">
                                <% third_level_menus.each do |third_level_menu| %>
                                    <li>
                                      <a href="<%= third_level_menu.link %>" class="pjax-link">
                                        <i class="icon-pencil"></i>
                                        <%= third_level_menu.name_cn %>
                                      </a>
                                    </li>
                                <% end %>
                              </ul>
                          <% end %>
                        </li>


                    <% end %>
                  </ul>
              <% end %>

            </li>
        <% end %>

      </ul>

      <!-- /.nav-list -->

      <div class="sidebar-collapse" id="sidebar-collapse">
        <i class="icon-double-angle-left" data-icon1="icon-double-angle-left" data-icon2="icon-double-angle-right"></i>
      </div>

      <script type="text/javascript">
          try{ace.settings.check('sidebar' , 'collapsed')}catch(e){}
      </script>
    </div>

    <div class="main-content" id="pjax-container">
      <%= yield %>
    </div><!-- /.main-content -->


  </div><!-- /.main-container-inner -->

  <a href="#" id="btn-scroll-up" class="btn-scroll-up btn btn-sm btn-inverse">
    <i class="icon-double-angle-up icon-only bigger-110"></i>
  </a>
</div><!-- /.main-container -->


<!-- basic scripts -->

<script type="text/javascript">
    if("ontouchend" in document) document.write("<script src='/assets/jquery.mobile.custom.min.js'>"+"<"+"script>");
</script>
