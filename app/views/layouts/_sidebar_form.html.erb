        <!--<a href="/statistics/by_month_bak?menu_type=<%= params[:menu_type] %>&&patient_id=<%= params[:patient_id] %>&&patient_visit_id=<%=params[:patient_visit_id] %>" class="pjax-link">-->
          <!--<i class="icon-double-angle-right"></i>-->
          <!--发作次数统计表-按月-->
