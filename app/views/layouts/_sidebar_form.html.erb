      <!--</li>-->
      <li>
        <a href="/statistics/index2?menu_type=<%= params[:menu_type] %>&&patient_id=<%= params[:patient_id] %>&&patient_visit_id=<%=params[:patient_visit_id] %>" class="pjax-link">
