<p id="notice"><%= notice %></p>

<h1>Listing Menus</h1>

<table>
  <thead>
    <tr>
      <th>Name cn</th>
      <th>Name en</th>
      <th>Menu</th>
      <th>Link</th>
      <th>Seq</th>
      <th>Seq</th>
      <th>Icon class</th>
      <th>Belong to</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @menus.each do |menu| %>
      <tr>
        <td><%= menu.name_cn %></td>
        <td><%= menu.name_en %></td>
        <td><%= menu.menu_id %></td>
        <td><%= menu.link %></td>
        <td><%= menu.seq %></td>
        <td><%= menu.seq %></td>
        <td><%= menu.icon_class %></td>
        <td><%= menu.belong_to %></td>
        <td><%= link_to 'Show', menu %></td>
        <td><%= link_to 'Edit', edit_menu_path(menu) %></td>
        <td><%= link_to 'Destroy', menu, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

